<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><%= pluralize(current_user.microposts.count, "microposts") %></span>
    </section>
    <% if current_user?(@user) %>
    <%= link_to "変更", edit_user_path(current_user)%>
    <% end %>
    <p style="margin-bottom: 15px;"><%= @user.profile %></p>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <div>
    <h3 style="float: left;"><%= @title %></h3>
    <!--検索機能-->
    
    <div class="search-group" style="float: right; margin-top: 7px;">
      <%= form_tag(followers_user_path(@user), :method => 'get' ) do %>
        <input type="search" name="search" id="search" placeholder= "キーワード"><input type="submit" name="" value="検索">
      <% end %>
    </div>
    </div>
    <!--検索機能ここまで-->
    <% if @users.any? %>
      <ul class="users follow" style="clear: both;">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>