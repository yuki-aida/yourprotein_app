<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <div>
    <h3 style="float: left;"><%= @title %></h3>
    <!--検索機能-->
    
    <div class="search-group" style="float: right; margin-top: 7px;">
      <%= form_tag(followers_user_path(@user), :method => 'get' ) do %>
        <input type="search" name="search" id="search" placeholder= "キーワード"><input type="submit" name="" value="検索">
      <% end %>
    </div>
    </div>
    <!--検索機能ここまで-->
    <% if @users.any? %>
      <ul class="users follow" style="clear: both;">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>