<% provide(:title, @title) %>
<% provide(:search_name, followers_user_path(@user)) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= avatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><%= pluralize(current_user.microposts.count, "microposts") %></span>
    </section>
    <% if current_user?(@user) %>
    <%= link_to "変更", edit_user_path(current_user)%>
    <% end %>
    <p style="margin-bottom: 15px;"><%= @user.profile %></p>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
</div>