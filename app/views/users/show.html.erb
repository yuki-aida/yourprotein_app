<!--ユーザー表示ビューにgravatarの画像と名前を表示する-->
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
    <%= link_to "変更", edit_user_path(current_user)%>
    <% end %>
    <p style="margin-bottom: 15px;"><%= @user.profile %></p>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="follow_form">
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
   <div class="col-md-8">
      <h3>投稿一覧 (<%= @user.microposts.count %>)</h3>
      
      <div class="user-liked-table">
        <%= link_to "投稿一覧", user_path(@user) %>
        <%= link_to "お気に入り", likes_user_path(@user) %>
      </div>
      <ol class="microposts" id="posts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
  </div>
</div>