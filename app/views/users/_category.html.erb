<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <% if current_user?(@user) %>
      <%= link_to "変更", edit_user_path(current_user)%>
      <% end %>
      <p style="margin-bottom: 15px;"><%= @user.profile %></p>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <div>
      <h3><%= yield(:category) %></h3>
      <ol class="microposts" id="posts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
  </div>
    </div>
<% end %>