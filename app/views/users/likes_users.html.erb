<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if current_user?(@user) %>
    <%= link_to "変更", edit_user_path(current_user)%>
    <% end %>
    <p style="margin-bottom: 15px;"><%= @user.profile %></p>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section class="follow_form">
      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
   <div class="col-md-8">
      <div>
      <h3 style="float: left;">お気に入り(<%= @likes.count %>)</h3>
      
      <!--<検索機能>-->
      
      <div class="search-group" style="float: right; margin-top: 12px;">
      <%= form_tag(likes_user_path, :method => 'get' ) do %>
        <input type="search" name="search" id="search" placeholder="キーワード"><input type="submit" name="" value="検索">
      <% end %>
      </div>
      </div>
      
      <!--<検索機能ここまで>-->
      
      <div style="clear: both;">
        <%= link_to "投稿一覧", user_path(@user) %>
        <%= link_to "お気に入り", likes_user_path(@user) %>
      </div>
      
<ol class="microposts" id="posts">
  <% @microposts.each do |micropost| %>
  <li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= simple_format(micropost.content) %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <!--like拡張機能-->
  <%= render "likes/like", micropost: micropost %> <!-- Likeビューをパーシャル化する際にMicropostをビューに渡す -->　
  </li>
  <% end %>
</ol>
  </div>
</div>