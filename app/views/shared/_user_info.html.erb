<div class="user-image">
<% if current_user.picture.present? %>
  <%= link_to image_tag(current_user.picture.url, :size => "50x50"), user_path(current_user) %>
<% else %>
  <%= link_to image_tag("default.jpg", :size => "50x50"), user_path(current_user) %>
<% end %>
</div>
<h1><%= current_user.name %></h1>
<span><%= link_to "プロフィール", current_user %></span>
<span><%= pluralize(current_user.microposts.count, "microposts") %></span>
