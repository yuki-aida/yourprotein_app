<div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <% if current_user?(@user) %>
      <%= link_to "変更", edit_user_path(current_user)%>
      <% end %>
      <p><%= @user.profile %></p>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form" style="margin-top: 10px;">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <div>
      <h3 style="float: left;">タイムライン</h3>
      
      <!--検索機能-->
      
      <div class="search-group" style="float: right; margin-top: 12px;">
      <%= form_tag(root_path, :method => 'get' ) do %>
        <input type="search" name="search" id="search" placeholder="キーワード"><input type="submit" name="" value="検索">
      <% end %>
      </div>
      </div>
      
      <!--検索機能ここまで-->
      
      <%= render 'shared/feed' %>
    </div>
  </div>